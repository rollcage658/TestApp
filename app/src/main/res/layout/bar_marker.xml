<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/marker_background"
    >

        <TextView
            android:id="@+id/bar_marker_daily_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{dailyData.dailyGoal}"
            tools:text="500/"
            android:textColor="@color/blue"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/bar_marker_daily_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{dailyData.dailyActivity}"
            tools:text="3000 steps"
            android:textColor="@color/grey_text"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            />

</LinearLayout>
