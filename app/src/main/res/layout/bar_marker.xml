<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="dailyData"
            type="com.example.appnextexercise.ui.home_fragment.HomeViewModel" />
    </data>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/timeline"
        >

            <TextView
                android:id="@+id/bar_marker_daily_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{dailyData.data.get(0).component1()}"
                tools:text="500/"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/bar_marker_daily_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{dailyData.data.get(0).component2()}"
                tools:text="3000 steps"
                android:textColor="@color/green_indicator"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                />

    </LinearLayout>
</layout>